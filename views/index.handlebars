<section class='margin-top-0' id='category'>
    <h2> Categories </h2>

      {{#each categories}}
        <div class="row">
            <div id="cat-wrap">
                <h3> {{this.category_name}} </h3>
            <form action="categories/subscribe/{{this.id}}" method="POST">
              <input type="hidden" name="subscribe" value="true">
              <button type="submit" id="subscribe-button">Subscribe to amazing {{this.category_name}} facts!</button>
            </form>
            <br>
            <br>
            <form action="facts/send-cool-fact/{{this.id}}" method="POST">
              <input type="hidden" name="sendtext" value="true">
              <button type="submit" id="sms-button">Text me amazing {{this.category_name}} facts!</button>
            </form>
            </div>
        </div>
    </div>

      {{/each}}
    
<br>
<h2> Facts </h2>


<div class="row-fact">
  {{#each facts}}
    <div id="fact-wrap">
        <p id="topic"> Amazing {{this.topic}} facts</p>
        <p id="fact-name"> {{this.fact}} </p> 

    </div>
</div>
  {{/each }}
  </section>


  

